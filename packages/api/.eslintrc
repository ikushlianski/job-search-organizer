{
        "extends": [
            "plugin:prettier/recommended"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
          "sourceType": "module"
        },
        "overrides": [
            {
                "files": [
                    "**/*.ts?(x)"
                ],
                "rules": {
                    "prettier/prettier": ["warn", {
                        "semi": true,
                        "trailingComma": "all",
                        "singleQuote": true,
                        "printWidth": 80,
                        "tabWidth": 2
                    }],
                    "newline-before-return": "warn"
                }
            }
        ]
}
