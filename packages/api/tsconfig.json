{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "./dist",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "rootDir": "src",
    "composite": true
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "references": [{ "path": "../common", "prepend": false }]
}
